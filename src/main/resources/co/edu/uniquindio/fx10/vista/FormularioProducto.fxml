<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox id="formularioProducto"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.fx10.controlador.FormularioProductoController"
      spacing="20"
      stylesheets="@styles/FormularioProducto.css">
    
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Encabezado -->
    <Label id="encabezado" text="Crear Nuevo Producto">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Label>

    <!-- Formulario -->
    <VBox id="formulario" spacing="15">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <GridPane hgap="15" vgap="20">
            <!-- Código -->
            <Label id="code" text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtCodigo" promptText="Ingrese el código del producto" 
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- Nombre -->
            <Label id="name" text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtNombre" promptText="Ingrese el nombre del producto" 
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Descripción -->
            <Label id="description" text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="txtDescripcion" promptText="Ingrese la descripción del producto" 
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Precio -->
            <Label id="price" text="Precio:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="txtPrecio" promptText="Ingrese el precio" 
                       GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Stock -->
            <Label id="stock" text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="txtStock" promptText="Ingrese la cantidad en stock" 
                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="300"/>
            </columnConstraints>
        </GridPane>

        <!-- Botones -->
        <HBox spacing="15" alignment="CENTER_RIGHT">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
            <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar"/>
            <Button fx:id="btnGuardar" text="Guardar Producto" onAction="#onGuardarProducto">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>
        </HBox>
    </VBox>

</VBox>

