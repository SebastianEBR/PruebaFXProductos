<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="productsTable"
      spacing="20"
      stylesheets="@styles/TablaProductos.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.fx10.controlador.TablaProductosController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label fx:id="lblTitulo" text="Tabla de productos">
            <font>
                <Font name="System Bold" size="28" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnBack" onAction="#onBack" text="Volver">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Button>
    </HBox>
    <!-- Tabla de productos -->
    <VBox styleClass="contenedorProductos" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label text="Lista de Productos">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaProductos" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCodigo" prefWidth="100" text="Código" />
                <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre" />
                <TableColumn fx:id="colDescripcion" prefWidth="280" text="Descripción" />
                <TableColumn fx:id="colPrecio" prefWidth="120" text="Precio" />
                <TableColumn fx:id="colStock" prefWidth="100" text="Stock" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnEliminar" onAction="#onEliminarProducto" text="Eliminar Producto" />
        </HBox>
    </VBox>


</VBox>
